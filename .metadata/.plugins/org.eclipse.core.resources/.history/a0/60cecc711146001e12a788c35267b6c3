package SumOfDigitsCalculator;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {

		Scanner scan=new Scanner(System.in);
		System.out.println("enter integer");
		int n=scan.nextInt();
		int sum=0;
		while(n>0)
		{
			
			int ld=n%10;
			
			sum=sum+ld;
			n=n/10;
		}
		System.out.println(sum);
	}

}
